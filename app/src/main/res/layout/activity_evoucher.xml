<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	tools:context=".mvp.evoucher.view.EVoucher">

	<include
		android:id="@+id/toolbar"
		layout="@layout/toolbar_view"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:gravity="center"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@+id/toolbar">

		<android.support.design.widget.TextInputLayout
			android:id="@+id/til_getplus_id"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/activity_horizontal_margin"
			android:textColorHint="@color/pureWhite"
			app:hintEnabled="false">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/etGetPlusID"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableEnd="@drawable/icon_scan"
				android:hint="@string/strGetPlusID"
				android:shadowColor="@color/pureWhite"
				android:textColor="@color/pureWhite"
				android:textColorHint="@color/pureWhite"
				android:textColorLink="@color/pureWhite" />

		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/til_password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/activity_horizontal_margin"
			app:hintEnabled="false">

			<android.support.design.widget.TextInputEditText
				android:id="@+id/etEVoucher"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableEnd="@drawable/icon_scan"
				android:hint="@string/strEVoucher"
				android:textColor="@color/pureWhite"
				android:textColorHint="@color/pureWhite" />

		</android.support.design.widget.TextInputLayout>

	</LinearLayout>

  <Button
    android:id="@+id/btnEVoucher"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="40dp"
    android:background="@drawable/ic_btn_lanjut_dark"
    android:text="LANJUT"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>