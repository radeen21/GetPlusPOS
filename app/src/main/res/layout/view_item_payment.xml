<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/product_image"
        android:layout_margin="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="halo apa kabar ?"
        android:textSize="18sp"
        android:textColor="@color/pureWhite"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:padding="8dp"
        app:layout_constraintLeft_toRightOf="@id/img_payment"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity :"
        android:textColor="@color/pureWhite"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/img_payment"/>


    <TextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="-"
        android:textColor="@color/pureWhite"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/tv_quantity"/>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="1"
        android:textSize="18sp"
        android:textColor="@color/pureWhite"
        app:layout_constraintLeft_toRightOf="@id/tv_min"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="+"
        android:textSize="14sp"
        android:textColor="@color/pureWhite"
        app:layout_constraintLeft_toRightOf="@id/tv_value"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pureWhite"
        android:padding="8dp"
        android:text="6280 pts"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_quantity"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity"
        />
</android.support.constraint.ConstraintLayout>