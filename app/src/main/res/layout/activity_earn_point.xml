<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/pureWhite"
            android:textStyle="bold"
            android:text="GetPlus ID"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilGetPlusId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/pureWhite"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etGetPlusId"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColor="@color/pureWhite"
                    android:textSize="16sp"
                    app:backgroundTint="@color/pureWhite"
                    android:textColorHint="@color/pureWhite"
                    android:textColorHighlight="@color/pureWhite" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera_alt_white"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/pureWhite"
            android:textStyle="bold"
            android:text="Member ID"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilMemberId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/pureWhite"
            app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etMemberId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/pureWhite"
            android:textSize="16sp"
            app:backgroundTint="@color/pureWhite"
            android:textColorHint="@color/pureWhite"
            android:textColorHighlight="@color/pureWhite" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/pureWhite"
            android:layout_marginTop="10dp"
            android:text="Nama Merchant"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilMerchantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/pureWhite"
            android:outlineAmbientShadowColor="@color/pureWhite"
            android:outlineSpotShadowColor="@color/pureWhite"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etMechantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:textColor="@color/pureWhite"
                android:textSize="16sp"
                app:backgroundTint="@color/pureWhite"
                android:textColorHint="@color/pureWhite"
                android:textColorHighlight="@color/pureWhite"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/pureWhite"
            android:text="Reff No"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilNoReff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etNoReff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="@color/pureWhite"
                app:backgroundTint="@color/pureWhite"
                android:textColorHint="@color/pureWhite"
                android:textColorHighlight="@color/pureWhite"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/pureWhite"
            android:text="Jumlah"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="16sp"
                app:backgroundTint="@color/pureWhite"
                android:textColor="@color/pureWhite"
                android:textColorHint="@color/pureWhite"
                android:textColorHighlight="@color/pureWhite"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_grey">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pureWhite"
                    android:text="Struk"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/rounded_grey">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pureWhite"
                    android:text="Struk"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnLanjutEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="LANJUT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/pureWhite"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>