<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <LinearLayout
      android:id="@+id/lin_toolbar"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:orientation="horizontal"
      android:gravity="center_horizontal"
      android:background="@color/greyText">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strKonfirmasi"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btnBatalTukar">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:text="GetPlus ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/pureWhite"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

      <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="GetPlus ID"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/pureWhite"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

      <TextView
        android:text="Nama Pengguna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/pureWhite"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

      <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nama Pengguna"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/pureWhite"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

      <TextView
        android:text="No. Reff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/pureWhite"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

      <TextView
        android:id="@+id/tv_reff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No. Reff"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/pureWhite"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

      <TextView
        android:text="Jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/pureWhite"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

      <TextView
        android:id="@+id/tv_jumlah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Jumlah"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/pureWhite"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    </LinearLayout>
  </ScrollView>

    <Button
      android:id="@+id/btnBatalTukar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:text="BATAL"
      android:textColor="@android:color/white"
      android:textSize="18sp"
      android:background="@drawable/ic_btn_lanjut_dark"
      app:layout_constraintBottom_toTopOf="@id/btnLanjutConfirm"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <Button
    android:id="@+id/btnLanjutConfirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_btn_lanjut_dark"
    android:text="LANJUT"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:layout_marginBottom="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>