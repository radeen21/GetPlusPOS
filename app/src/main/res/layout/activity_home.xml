<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarMain"
            layout="@layout/toolbar_login"/>

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <ScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                    <Button
                      android:id="@+id/btn_JumPoin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp"
                      android:layout_marginStart="15dp"
                      android:layout_marginEnd="15dp"
                      android:text="Cek Jumlah Poin"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"
                      android:background="@drawable/ic_btn_check_point"/>

                    <Button
                      android:id="@+id/btnBeriPoin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp"
                      android:layout_marginStart="15dp"
                      android:layout_marginEnd="15dp"
                      android:text="BERI POIN"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"
                      android:background="@drawable/ic_btn_check_point"/>

                    <Button
                      android:id="@+id/btnTukarPoin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp"
                      android:text="KONVERSI POIN"
                      android:layout_marginStart="15dp"
                      android:layout_marginEnd="15dp"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"
                      android:background="@drawable/ic_btn_check_point"/>

                    <Button
                      android:id="@+id/btnBayarPoin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp"
                      android:text="PEMBAYARAN POIN"
                      android:layout_marginStart="15dp"
                      android:layout_marginEnd="15dp"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"
                      android:background="@drawable/ic_btn_check_point"/>

                    <Button
                      android:id="@+id/btnVoucherPoin"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="20dp"
                      android:text="eVoucher"
                      android:layout_marginStart="15dp"
                      android:layout_marginEnd="15dp"
                      android:textSize="18sp"
                      android:textColor="@android:color/white"

                      android:background="@drawable/ic_btn_check_point"/>
                </LinearLayout>

            </ScrollView>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>